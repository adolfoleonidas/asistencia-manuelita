generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AttendanceType {
  ENTRADA
  SALIDA
}

enum UserRole {
  admin
  super_admin
}

model Employee {
  dni           String       @id @db.VarChar(8)
  nombre        String       @db.VarChar(200)
  cargo         String       @db.VarChar(100)
  area          String       @db.VarChar(100)
  fechaRegistro DateTime     @default(now()) @map("fecha_registro")
  attendances   Attendance[]

  @@map("empleados")
}

model Attendance {
  id        String         @id @default(cuid())
  dni       String         @db.VarChar(8)
  nombre    String         @db.VarChar(200)
  cargo     String         @db.VarChar(100)
  tipo      AttendanceType
  fecha     String         @db.VarChar(10)
  hora      String         @db.VarChar(8)
  punto     String?        @db.VarChar(100)
  lat       Float?
  lng       Float?
  timestamp DateTime       @default(now())
  employee  Employee       @relation(fields: [dni], references: [dni], onDelete: Cascade)

  @@index([fecha])
  @@index([dni, fecha])
  @@map("asistencias")
}

model User {
  id            String   @id @default(cuid())
  username      String   @unique @db.VarChar(50)
  passwordHash  String   @map("password_hash")
  nombre        String   @db.VarChar(200)
  rol           UserRole @default(admin)
  fechaCreacion DateTime @default(now()) @map("fecha_creacion")
  activo        Boolean  @default(true)

  @@map("usuarios")
}

model QrPoint {
  id                 String   @id @db.VarChar(100)
  nombre             String   @db.VarChar(200)
  lat                Float
  lng                Float
  radio              Int      @default(150)
  activo             Boolean  @default(true)
  fechaActualizacion DateTime @default(now()) @updatedAt @map("fecha_actualizacion")

  @@map("configuracion")
}

model SystemConfig {
  key   String @id @db.VarChar(100)
  value String @db.Text

  @@map("system_config")
}
